# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=library_catalog
# DATABASE_URL будет собран автоматически из настроек выше

# Application
APP_NAME="Library Catalog API"
ENVIRONMENT=development
DEBUG=true

# API
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# CORS
CORS_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO

# Open Library
OPENLIBRARY_BASE_URL=https://openlibrary.org
OPENLIBRARY_TIMEOUT=10.0
